<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAdministrador">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/lblTituloMA"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hospital" />

    <TextView
        android:id="@+id/lblTituloMA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#F80000"
        android:fontFamily="serif"
        android:text="CLINICA DE LOS ALTOS DE LOS ANDES"
        android:textColor="#ED0000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spnPacienteMA"
        android:layout_width="304dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spnAdminMA"
        android:layout_width="304dp"
        android:layout_height="24dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spnMedicoMA"
        android:layout_width="304dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spnCitaMA"
        android:layout_width="304dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="249dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="14dp"
        android:text="ADMINISTRADOR"
        app:layout_constraintBottom_toTopOf="@+id/spnAdminMA"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="173dp"
        android:layout_marginBottom="1dp"
        android:text="PACIENTE"
        app:layout_constraintBottom_toTopOf="@+id/spnPacienteMA"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginBottom="1dp"
        android:text="MEDICO"
        app:layout_constraintBottom_toTopOf="@+id/spnMedicoMA"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginBottom="2dp"
        android:text="CITA"
        app:layout_constraintBottom_toTopOf="@+id/spnCitaMA"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
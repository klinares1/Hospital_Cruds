<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EditarPaciente">

    <EditText
        android:id="@+id/txtApellidoEp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNumeroIdEP"
        app:layout_constraintStart_toEndOf="@+id/lblApellidosEP" />

    <Spinner
        android:id="@+id/spGeneroEP"
        android:layout_width="174dp"
        android:layout_height="26dp"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirmarEP"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spRhEP"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="121dp"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirmarEP"
        app:layout_constraintStart_toEndOf="@+id/txtFechaNac" />

    <TextView
        android:id="@+id/lblgeneroEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="sans-serif"
        android:text="Género"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/spGeneroEP"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblApellidosEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif"
        android:text="Apellidos:"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/lblNumeroIdEP"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtNumeroIdEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/lblRhEP"
        app:layout_constraintStart_toEndOf="@+id/lblNumeroIdEP" />

    <TextView
        android:id="@+id/lblFechaNacEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:text="Fecha de nacimiento"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/txtFechaNac"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblNumeroIdEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="61dp"
        android:fontFamily="sans-serif"
        android:text="Numero de Identificación:"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/lblFechaNacEP"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtNombreEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/txtApellidoEp"
        app:layout_constraintStart_toEndOf="@+id/lblnomEP" />

    <TextView
        android:id="@+id/lblnomEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="sans-serif"
        android:text="Nombres:"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/lblApellidosEP"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtFechaNac"
        android:layout_width="121dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="date"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/lblgeneroEP"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblRhEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:text="RH"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/spRhEP"
        app:layout_constraintStart_toEndOf="@+id/lblFechaNacEP" />

    <TextView
        android:id="@+id/lblTituloEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="sans-serif"
        android:text="Editar Paciente"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreEP"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnConfirmarEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="190dp"
        android:fontFamily="sans-serif"
        android:onClick="actualizar"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>